<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="true">

    <description>
        嘟嘟咖啡进销存管理系统
    </description>
    <display-name>嘟嘟咖啡进销存管理系统</display-name>

    <!--配置spring转发器-->
    <servlet>
        <servlet-name>spring</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>
                classpath:web_spring.xml,
                classpath:persistence_spring.xml
            </param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>spring</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!--字符集过滤器-->
    <filter>
        <filter-name>characterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>characterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--PUT方法过滤器-->
    <filter>
        <filter-name>POSTMethodFilter</filter-name>
        <filter-class>org.springframework.web.filter.HttpPutFormContentFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>POSTMethodFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

<!--禁止访问JSP-->
    <security-constraint>
        <display-name>过滤掉对JSP文件的直接访问</display-name>
        <web-resource-collection>
            <web-resource-name>JSP</web-resource-name>
            <url-pattern>*.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint/>
    </security-constraint>

    <!--错误页-->
    <error-page>
        <error-code>403</error-code>
        <location>/view/error/400.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/view/error/400.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/view/error/500.jsp</location>
    </error-page>


    <!-- 配置session过期时间30分钟 -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
